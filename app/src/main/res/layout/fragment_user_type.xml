<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="814dp"
        android:layout_below="@id/_APP"
        android:layout_margin="50dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/_USER_CUSTOMER_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/user_customer" />

        <Button
            android:id="@+id/_USER_BUSINESS_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/user_business" />


        <Button
            android:id="@+id/_USER_ADMIN_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/user_admin" />


    </LinearLayout>

</FrameLayout>